<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="viacheslav_regular_customer" resource="default" engine="innodb" comment="Regular Customer">
        <column xsi:type="int"
                name="request_id"
                padding="10"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="Request ID"
        />
        <column xsi:type="int"
                name="customer_id"
                padding="10"
                unsigned="true"
                nullable="true"
                comment="Customer ID"
        />
        <column xsi:type="varchar"
                name="name"
                nullable="false"
                length="255"
                comment="Name"
        />
        <column xsi:type="varchar"
                name="email"
                nullable="false"
                length="255"
                comment="Email"
        />
        <column xsi:type="smallint"
                name="website_id"
                padding="5"
                unsigned="true"
                nullable="true"
                comment="Website ID"
        />
        <column xsi:type="int"
                name="admin_user_id"
                padding="10"
                unsigned="true"
                nullable="true"
                comment="Admin ID"
        />
        <column xsi:type="timestamp"
                name="created_at"
                on_update="false"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Created At"
        />
        <column xsi:type="timestamp"
                name="updated_at"
                on_update="true"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Updated At"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="request_id"/>
        </constraint>
        <index referenceId="VIACHESLAV_REGULAR_CUSTOMER_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="VIACHESLAV_REGULAR_CUSTOMER_WEBSITE_ID" indexType="btree">
            <column name="website_id"/>
        </index>
        <index referenceId="VIACHESLAV_REGULAR_CUSTOMER_ADMIN_USER_ID" indexType="btree">
            <column name="admin_user_id"/>
        </index>
        <constraint xsi:type="unique" referenceId="VIACHESLAV_REGULAR_CUSTOMER_EMAIL_WEBSITE_ID">
            <column name="email"/>
            <column name="website_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="VIACHESLAV_REGULAR_CSTR_CSTR_ID_M2_CSTR_ENTT_ENTT_ID"
                    table="viacheslav_regular_customer"
                    column="customer_id"
                    referenceTable="customer_entity"
                    referenceColumn="entity_id"
                    onDelete="SET NULL"
        />
        <constraint xsi:type="foreign"
                    referenceId="VIACHESLAV_REGULAR_CSTR_WS_ID_M2_STORE_WS_WS_ID"
                    table="viacheslav_regular_customer"
                    column="website_id"
                    referenceTable="store_website"
                    referenceColumn="website_id"
                    onDelete="SET NULL"
        />
        <constraint xsi:type="foreign"
                    referenceId="VIACHESLAV_REGULAR_CSTR_ADM_USR_ID_M2_ADM_USR_USR_ID"
                    table="viacheslav_regular_customer"
                    column="admin_user_id"
                    referenceTable="admin_user"
                    referenceColumn="user_id"
                    onDelete="SET NULL"
        />
    </table>
</schema>
